<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <ImageView
        android:id="@+id/listview_item_file_object_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/listview_item_file_object_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/listview_item_file_object_icon"
        android:text="Name"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listview_item_file_object_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listview_item_file_object_name"
        android:layout_toRightOf="@+id/listview_item_file_object_icon"
        android:text="Desc"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/listview_item_file_object_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listview_item_file_object_details"
        android:text="Size"
        android:textSize="12sp" />

</RelativeLayout>