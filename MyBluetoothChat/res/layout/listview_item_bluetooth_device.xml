<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/listview_item_bluetooth_device_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/listview_item_bluetooth_device_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/listview_item_bluetooth_device_icon"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listview_item_bluetooth_device_mac_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listview_item_bluetooth_device_name"
        android:layout_toRightOf="@+id/listview_item_bluetooth_device_icon"
        android:padding="4dp"
        android:textSize="14sp"
        android:textStyle="italic" />

</RelativeLayout>